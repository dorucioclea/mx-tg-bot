{
  "license": "MIT",
  "scripts": {
    "check-config": "test -f app.config.ts || cp app.config.example.ts app.config.ts",
    "build": "tsup",
    "build:ts": "tsup --env.NODE_ENV production",
    "dev": "yarn dev:watch",
    "dev:watch": "tsx watch src/server.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepare": "husky install && npm run check-config",
    "start": "tsx src/server.ts",
    "start:prod": "node dist/server.js",
    "typecheck": "tsc -b"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,css,md}": "prettier --write"
  },
  "dependencies": {
    "@fastify/autoload": "5.7.1",
    "@fastify/cors": "8.3.0",
    "@fastify/env": "4.2.0",
    "@fastify/etag": "4.2.0",
    "@fastify/helmet": "11.0.0",
    "@fastify/multipart": "7.7.1",
    "@fastify/one-line-logger": "1.2.0",
    "@fastify/rate-limit": "8.0.3",
    "@fastify/sensible": "5.2.0",
    "@types/randomcolor": "0.5.7",
    "chalk": "4.1.2",
    "close-with-grace": "1.2.0",
    "consola": "2.15.3",
    "fastify": "4.20.0",
    "fastify-cli": "5.7.1",
    "fastify-plugin": "4.5.0",
    "fastify-tsconfig": "1.0.1",
    "node-telegram-bot-api": "0.61.0",
    "randomcolor": "0.6.2",
    "dayjs": "1.11.9",
    "lodash": "4.17.21",
    "remove-markdown": "0.5.0",
    "socket.io-client": "4.7.1"
  },
  "devDependencies": {
    "@innei/eslint-config-ts": "0.10.3",
    "@innei/prettier": "0.10.3",
    "@types/dotenv": "8.2.0",
    "@types/node": "20.4.2",
    "@types/node-telegram-bot-api": "0.61.6",
    "cross-env": "7.0.3",
    "eslint": "8.45.0",
    "fast-json-stringify": "5.7.0",
    "husky": "8.0.3",
    "json-schema-to-typescript": "13.0.2",
    "lint-staged": "13.2.3",
    "prettier": "2.8.8",
    "ts-node": "10.9.1",
    "tsup": "7.1.0",
    "tsx": "3.12.7",
    "typescript": "5.1.6"
  },
  "engines": {
    "node": ">=16.20.0"
  },
  "tsup": {
    "entry": [
      "src/**/*.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "format": [
      "cjs",
      "esm"
    ],
    "legacyOutput": true,
    "target": "es2018",
    "onSuccess": "npm run copy:assets"
  }
}
